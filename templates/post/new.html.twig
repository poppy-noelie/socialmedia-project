{% extends 'base.html.twig' %}

{% block title %}Create a New Post{% endblock %}

{% block meta %}
    <meta name="description" content="Create a new post on our app. Share your thoughts and engage with the community.">
{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="title">Cr√©er un post</h1>

        <div class="post-box login-box">
            <div class="new-post-form" role="form" aria-labelledby="form-title">
                {{ form_start(form, {'attr': {'aria-labelledby': 'form-title'}}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>

            {% if flash is defined %}
                {% if flash.error %}
                    <div class="alert alert-danger" role="alert">{{ flash.error }}</div>
                {% endif %}
            {% endif %}
        </div>

        <nav role="navigation">
            {% include 'components/navbar.html.twig' %}
        </nav>
    </div>

{% endblock %}
